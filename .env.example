# Water Network Anomaly Detection - Environment Configuration
# Copy this file to .env and update with your actual paths

# Data Paths
TRAINING_DATA_DIR=./src/data/training_dataset
TRAINING_DATA_OUTPUT_DIR=./src/data/training_dataset

PROD_DATA_DIR=./src/data/prod_dataset
PROD_DATA_OUTPUT_DIR=./src/data/prod_dataset


# Model Paths
MODEL_WEIGHTS_DIR=./src/model/model_weights
SCALER_FILE=./src/model/model_weights/scaler.pkl
KNN_MODEL_FILE=./src/model/model_weights/knn_lazy_model.pkl
LSTM_MODEL_FILE=./src/model/model_weights/lstm_model.h5
LABEL_ENCODERS_FILE=./src/model/model_weights/label_encoders.pkl
TARGET_ENCODER_FILE=./src/model/model_weights/target_encoder.pkl

# Model Parameters
KNN_NEIGHBORS=5
LSTM_EPOCHS=50
LSTM_BATCH_SIZE=64
LSTM_VALIDATION_SPLIT=0.1
TRAIN_TEST_SPLIT=0.2

# RAG Configuration (Retrieval-Augmented Generation)
# SQLite metadata database (local storage)
RAG_DB_PATH=./src/data/RAG/rag_metadata.db

# ChromaDB vector database (local persistence)
# VectorDBService will use this path for local ChromaDB persistence
CHROMA_DB_PATH=./src/data/RAG/chroma_db

RAG_CONFIG_PATH=./src/rag/config
APP_ENV=development

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs
